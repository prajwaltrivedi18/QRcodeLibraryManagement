        %>
        <tr>
           
           <td> <center><%=data.bid %></center></td>
            <td><center><%=data.bname %></center></td>
            <td><center><%=data.author %></center></td>
            <td><center><%=data.publication %></center></td>
        </tr>
        <%  }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
      </table>
    </center>
    </div>
</form>

  
