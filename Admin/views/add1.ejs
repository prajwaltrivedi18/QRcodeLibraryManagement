</head>
<body>
  <div class="container">
    <h2>New Book</h2><br>
    <form action="/add1" method="post">
      <div class="form-group">
        <label for="bookid">Book Id:</label>
        <input type="text" class="form-control" name="bid" placeholder="Enter Book Id" required>
      </div>
      <div class="form-group">
        <label for="bookname">Book Name:</label>
        <input type="text" class="form-control" name="bname" placeholder="Enter New Book" required>
      </div>
      <div class="form-group">
        <label for="bookname">Author :</label>
        <input type="text" class="form-control" name="author" placeholder="Enter Author's name" required>
      </div>
      <div class="form-group">
        <label for="bookname">Publication:</label>
        <input type="text" class="form-control" name="publication" placeholder="Enter publication" required>
      </div>
      
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
