<!DOCTYPE html>
<html>
<head>
  <title>Add a book</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <style>
    body {
      background: rgb(174,188,238);
background: linear-gradient(90deg, rgba(174,188,238,1) 0%, rgba(66,82,223,0.9360994397759104) 100%);
      padding: 20px;
    }

    .form-group label {
      font-weight: bold;
      line-height: 2rem;
    }
    label{
      display: flex;
      align-items:flex-start;
    }
    /* D:\MP\admin\views\add1.html */
